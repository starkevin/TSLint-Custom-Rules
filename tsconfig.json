{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "allowUnreachableCode": false,
        "allowUnusedLabels": false,
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "moduleResolution": "node",
        "sourceMap": true
    },
    "include": [
        "./customRule/*.ts",
        "test/**/*.ts"
    ]
}