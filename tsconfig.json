{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "allowUnreachableCode": false,
        "allowUnusedLabels": false,
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "bin",
        "noImplicitAny": true
    },
    "include": [
        "b.ts",
        "customRules/**/*.ts",
        "test/**/*.ts",
        "debug.ts"
    ]
}